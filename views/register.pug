extend layout

block content
  include includes/containers
    h2 To have some fun, register:
    form(method='POST' action='/registerUser')
        .form-group
        label(for='username') Name
        input#username.form-control(required name='username' type='text' aria-describedby='emailHelp' placeholder='Enter your name')
        .form-group
        label(for='email') Email
        input#email.form-control(required name='email' type='text' aria-describedby='emailHelp' placeholder='Enter your email')
        .form-group
        label(for='password') Password

        input#password.form-control(name='password' type='password' aria-describedby='emailHelp' placeholder='Enter your password')
        button.btn.btn-danger Register

    include includes/footer